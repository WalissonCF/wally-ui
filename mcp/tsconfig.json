{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../playground",
    "../src",
    "../node_modules",
    "../.git",
    "../.github",
    "../dist",
    "*.spec.ts",
    "*.test.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "coverage",
    ".nyc_output",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}